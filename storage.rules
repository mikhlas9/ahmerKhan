rules_version = '2';

service firebase.storage {
  match /b/{bucket}/o {
    
    // Helper function to check if user is authenticated
    function isAuthenticated() {
      return request.auth != null;
    }
    
    // Helper function to validate image file type (for uploads)
    function isImage() {
      return request.resource.contentType.matches('image/.*');
    }
    
    // Helper function to validate file size (max 10MB)
    function isValidSize() {
      return request.resource.size < 10 * 1024 * 1024; // 10MB
    }
    
    // Projects images folder - MUST come before catch-all rule
    // This handles all images in projects folder including photo-stories, films, etc.
    match /projects/{fileName} {
      allow read: if true; // Anyone can read project images
      allow create, update: if isAuthenticated() && isImage() && isValidSize(); // Only authenticated users can upload
      allow delete: if isAuthenticated(); // Only authenticated users can delete
    }
    
    // Projects subfolders (if any)
    match /projects/{pathSegment}/{allPaths=**} {
      allow read: if true; // Anyone can read project images
      allow create, update: if isAuthenticated() && isImage() && isValidSize(); // Only authenticated users can upload
      allow delete: if isAuthenticated(); // Only authenticated users can delete
    }
    
    // Homepage images folder
    match /homepage/{allPaths=**} {
      allow read: if true; // Anyone can read homepage images
      allow create, update: if isAuthenticated() && isImage() && isValidSize(); // Only authenticated users can upload
      allow delete: if isAuthenticated(); // Only authenticated users can delete
    }
    
    // Portraits images folder
    match /portraits/{fileName} {
      allow read: if true; // Anyone can read portrait images
      allow create, update: if isAuthenticated() && isImage() && isValidSize(); // Only authenticated users can upload
      allow delete: if isAuthenticated(); // Only authenticated users can delete
    }
    
    // Portraits subfolders (if any)
    match /portraits/{pathSegment}/{allPaths=**} {
      allow read: if true; // Anyone can read portrait images
      allow create, update: if isAuthenticated() && isImage() && isValidSize(); // Only authenticated users can upload
      allow delete: if isAuthenticated(); // Only authenticated users can delete
    }
    
    // Tearsheets images folder
    match /tearsheets/{allPaths=**} {
      allow read: if true; // Anyone can read tearsheet images
      allow create, update: if isAuthenticated() && isImage() && isValidSize(); // Only authenticated users can upload
      allow delete: if isAuthenticated(); // Only authenticated users can delete
    }
    
    // Awards images folder
    match /awards/{fileName} {
      allow read: if true; // Anyone can read award images
      allow create, update: if isAuthenticated() && isImage() && isValidSize(); // Only authenticated users can upload
      allow delete: if isAuthenticated(); // Only authenticated users can delete
    }
    
    // Awards subfolders (if any)
    match /awards/{pathSegment}/{allPaths=**} {
      allow read: if true; // Anyone can read award images
      allow create, update: if isAuthenticated() && isImage() && isValidSize(); // Only authenticated users can upload
      allow delete: if isAuthenticated(); // Only authenticated users can delete
    }
    
    // General images folder (default/fallback)
    match /images/{allPaths=**} {
      allow read: if true; // Anyone can read images
      allow create, update: if isAuthenticated() && isImage() && isValidSize(); // Only authenticated users can upload
      allow delete: if isAuthenticated(); // Only authenticated users can delete
    }
    
    // Allow read access to all other paths (for backward compatibility)
    // But restrict write access
    match /{allPaths=**} {
      allow read: if true; // Allow reading any file (for public access)
      allow write: if false; // Deny write to any other paths
    }
  }
}

